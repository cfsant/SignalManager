@inherits Base

@this.Body

@code{
    [Parameter]
    public UserDomain User
    {
        get;
        set;
    }

    protected override Task OnInitializedAsync()
    {
        return Task.Run(() => {
            this.Body = this.RenderBody();
        });
    }

    protected override void LoadContent()
    {
        this.Class = "d-flex flex-column justify-content-center";

        this.Content = new Collection<RenderFragment>();
        this.Content.Add(@<FrmIqOptionUserSignal Parent=this OnFormSubmitCallBack=@(new Action(ReRenderBody)) User=User />);
        this.Content.Add(@<GrdIqOptionUserSignal Parent=this OnEditCallback=@(new Action(ReRenderBody)) OnRemoveCallback=@(new Action(ReRenderBody))  User=User/>);
        }

        public override void ReRenderBody()
        {
            this.Body = this.RenderBody();
            StateHasChanged();
        }
    }