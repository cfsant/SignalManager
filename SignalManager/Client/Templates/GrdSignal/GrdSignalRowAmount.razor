@inherits Base
@this.Body

@code {
    [Parameter]
    public Signal Model
    {
        get;
        set;
    }

    protected override Task OnInitializedAsync()
    {
        this.Class = "col-xl-2 col-lg-2 col-md-3 col-sm-3 pt-xl-1 pt-lg-1 text-xl-center";

        return Task.Run(() =>
        {
            this.Body = this.RenderBody();
        });
    }

    protected override void LoadContent()
    {
        this.Content = new Collection<RenderFragment>();

        this.Content.Add(new Text() { Parent = this, Content = this.Model.Amount.ToString("N2"), Class = "text-right text-xl-center text-lg-center" }.RenderBody());
    }
}
