@inherits Base
@this.Body

@code {
    [Parameter]
    public Signal Model
    {
        get;
        set;
    }

    [Parameter]
    public Action<Signal> OnRemove
    {
        get;
        set;
    }

    protected override Task OnInitializedAsync()
    {
        this.Class = "d-flex w-50 text-center justify-content-center";

        return Task.Run(() =>
        {
            this.Body = this.RenderBody();
        });
    }

    protected override void LoadContent()
    {
        this.Content = new Collection<RenderFragment>();

        this.Content.Add(@<MatIconButton Icon="@MatIconNames.Delete" OnClick=@(new Action(() => OnRemove(this.Model))) />);
    }
}