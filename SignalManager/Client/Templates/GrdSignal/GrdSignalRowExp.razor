@inherits Base
@this.Body

@code {
    [Parameter]
    public Signal Model
    {
        get;
        set;
    }

    protected override Task OnInitializedAsync()
    {
        this.Class = "col-xl-1 col-lg-1 col-md-3 col-sm-3 pt-xl-1 pt-lg-1 pl-xl-4 pl-lg-2";

        return Task.Run(() =>
        {
            this.Body = this.RenderBody();
        });
    }

    protected override void LoadContent()
    {
        this.Content = new Collection<RenderFragment>();

        this.Content.Add(new Text() { Parent = this, Content = this.Model.Exp.ToString(), Class = "text-right text-xl-left text-lg-center" }.RenderBody());
    }
}
